{
    "compilerOptions": {
        "lib": ["es5", "es6", "dom", "esnext"],
        "target": "esnext",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}